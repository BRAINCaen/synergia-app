// ==========================================
// üìÅ react-app/src/pages/AdminQuickFixPage.jsx
// PAGE DE CORRECTION RAPIDE DE L'ACC√àS ADMIN
// ==========================================

import React, { useState, useEffect } from 'react';
import { motion } from 'framer-motion';
import { 
  Shield, 
  CheckCircle, 
  AlertTriangle, 
  RefreshCw,
  Key,
  Crown,
  Settings,
  Eye,
  User,
  Database,
  Zap,
  ArrowLeft
} from 'lucide-react';
import { Link } from 'react-router-dom';

import { useAuthStore } from '../shared/stores/authStore.js';
import { doc, updateDoc, setDoc, getDoc } from 'firebase/firestore';
import { db } from '../core/firebase.js';

/**
 * üõ°Ô∏è PAGE DE CORRECTION RAPIDE ADMIN
 */
const AdminQuickFixPage = () => {
  const { user } = useAuthStore();
  
  // √âtats
  const [adminStatus, setAdminStatus] = useState(null);
  const [loading, setLoading] = useState(false);
  const [fixing, setFixing] = useState(false);
  const [message, setMessage] = useState(null);
  const [fixHistory, setFixHistory] = useState([]);

  // Charger le statut au montage
  useEffect(() => {
    if (user) {
      checkCurrentAdminStatus();
    }
  }, [user]);

  /**
   * üîç V√âRIFIER LE STATUT ADMIN ACTUEL
   */
  const checkCurrentAdminStatus = async () => {
    setLoading(true);
    try {
      const userRef = doc(db, 'users', user.email);
      const userSnap = await getDoc(userRef);
      
      if (!userSnap.exists()) {
        setAdminStatus({
          exists: false,
          message: 'Document utilisateur non trouv√© dans Firebase'
        });
        return;
      }
      
      const userData = userSnap.data();
      
      const status = {
        exists: true,
        email: userData.email,
        role: userData.role,
        isAdmin: userData.isAdmin,
        profileRole: userData.profile?.role,
        permissions: userData.permissions || [],
        adminSince: userData.adminSince,
        
        // Tests de validation
        checks: {
          roleAdmin: userData.role === 'admin',
          flagAdmin: userData.isAdmin === true,
          profileRoleAdmin: userData.profile?.role === 'admin',
          hasPermissions: userData.permissions?.includes('admin_access')
        },
        
        // R√©sultat final
        isValidAdmin: (
          userData.role === 'admin' || 
          userData.isAdmin === true || 
          userData.profile?.role === 'admin' ||
          userData.permissions?.includes('admin_access')
        )
      };
      
      setAdminStatus(status);
      
      if (status.isValidAdmin) {
        setMessage({
          type: 'success',
          text: '‚úÖ Vous avez d√©j√† l\'acc√®s administrateur !'
        });
      } else {
        setMessage({
          type: 'warning', 
          text: '‚ö†Ô∏è Acc√®s administrateur non configur√©'
        });
      }
      
    } catch (error) {
      console.error('‚ùå Erreur v√©rification admin:', error);
      setMessage({
        type: 'error',
        text: `‚ùå Erreur: ${error.message}`
      });
    } finally {
      setLoading(false);
    }
  };

  /**
   * üöÄ CORRIGER L'ACC√àS ADMIN
   */
  const fixAdminAccess = async () => {
    setFixing(true);
    setMessage({ type: 'info', text: 'üîß Correction en cours...' });
    
    try {
      const userEmail = user.email;
      const userRef = doc(db, 'users', userEmail);
      
      // Configuration admin compl√®te
      const adminConfig = {
        role: 'admin',
        isAdmin: true,
        'profile.role': 'admin',
        permissions: [
          'admin_access',
          'manage_users',
          'manage_badges',
          'validate_tasks',
          'validate_xp',
          'view_analytics',
          'manage_projects',
          'system_config',
          'full_access'
        ],
        adminSince: new Date(),
        adminAssignedBy: 'self_correction',
        adminLevel: 'super_admin',
        updatedAt: new Date(),
        lastAdminUpdate: new Date()
      };
      
      // Appliquer la correction
      await updateDoc(userRef, adminConfig);
      
      // Cr√©er l'enregistrement admin
      const adminRef = doc(db, 'admins', userEmail);
      await setDoc(adminRef, {
        userId: userEmail,
        email: userEmail,
        displayName: user.displayName || 'Administrateur',
        assignedBy: 'self_correction',
        assignedAt: new Date(),
        isActive: true,
        adminLevel: 'super_admin',
        permissions: adminConfig.permissions,
        createdAt: new Date()
      }, { merge: true });
      
      // Ajouter √† l'historique
      const fixEntry = {
        timestamp: new Date(),
        action: 'admin_access_granted',
        method: 'self_correction',
        success: true
      };
      
      setFixHistory(prev => [fixEntry, ...prev]);
      
      // Re-v√©rifier le statut
      setTimeout(() => {
        checkCurrentAdminStatus();
        setMessage({
          type: 'success',
          text: 'üéâ Acc√®s administrateur configur√© avec succ√®s ! Rechargez la page.'
        });
      }, 1000);
      
    } catch (error) {
      console.error('‚ùå Erreur correction admin:', error);
      setMessage({
        type: 'error',
        text: `‚ùå Erreur correction: ${error.message}`
      });
      
      setFixHistory(prev => [{
        timestamp: new Date(),
        action: 'admin_access_failed',
        error: error.message,
        success: false
      }, ...prev]);
      
    } finally {
      setFixing(false);
    }
  };

  if (!user) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <AlertTriangle className="w-12 h-12 text-yellow-500 mx-auto mb-4" />
          <h2 className="text-xl font-bold text-gray-900 mb-2">Connexion requise</h2>
          <p className="text-gray-600">Vous devez √™tre connect√© pour acc√©der √† cette page.</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 p-4">
      <div className="max-w-4xl mx-auto">
        
        {/* Header */}
        <div className="mb-6">
          <Link 
            to="/dashboard"
            className="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 mb-4"
          >
            <ArrowLeft size={16} />
            Retour au Dashboard
          </Link>
          
          <div className="bg-white rounded-lg border p-6">
            <div className="flex items-center gap-3 mb-4">
              <Shield className="w-8 h-8 text-blue-600" />
              <div>
                <h1 className="text-2xl font-bold text-gray-900">
                  üõ°Ô∏è Correctif Acc√®s Administrateur
                </h1>
                <p className="text-gray-600">
                  Configuration et test des permissions administrateur
                </p>
              </div>
            </div>
            
            {/* Statut utilisateur */}
            <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div className="flex items-center gap-3">
                <User className="w-5 h-5 text-blue-600" />
                <div>
                  <p className="font-medium text-blue-900">Utilisateur connect√©</p>
                  <p className="text-sm text-blue-700">{user.email}</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Message */}
        {message && (
          <motion.div
            initial={{ opacity: 0, y: -20 }}
            animate={{ opacity: 1, y: 0 }}
            className={`p-4 rounded-lg border mb-6 ${
              message.type === 'success' ? 'bg-green-50 border-green-200 text-green-800' :
              message.type === 'error' ? 'bg-red-50 border-red-200 text-red-800' :
              message.type === 'warning' ? 'bg-yellow-50 border-yellow-200 text-yellow-800' :
              'bg-blue-50 border-blue-200 text-blue-800'
            }`}
          >
            {message.text}
          </motion.div>
        )}

        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          
          {/* Statut Admin */}
          <div className="bg-white rounded-lg border p-6">
            <h3 className="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <Eye className="w-5 h-5" />
              Statut Administrateur
            </h3>
            
            {loading ? (
              <div className="flex items-center gap-2 text-gray-600">
                <RefreshCw className="w-4 h-4 animate-spin" />
                V√©rification en cours...
              </div>
            ) : adminStatus ? (
              <div className="space-y-4">
                
                {/* Statut global */}
                <div className={`p-4 rounded-lg border ${
                  adminStatus.isValidAdmin 
                    ? 'bg-green-50 border-green-200' 
                    : 'bg-red-50 border-red-200'
                }`}>
                  <div className="flex items-center gap-3">
                    {adminStatus.isValidAdmin ? (
                      <CheckCircle className="w-6 h-6 text-green-600" />
                    ) : (
                      <AlertTriangle className="w-6 h-6 text-red-600" />
                    )}
                    <div>
                      <p className={`font-semibold ${
                        adminStatus.isValidAdmin ? 'text-green-800' : 'text-red-800'
                      }`}>
                        {adminStatus.isValidAdmin ? 'Acc√®s Admin Confirm√©' : 'Pas d\'Acc√®s Admin'}
                      </p>
                      <p className={`text-sm ${
                        adminStatus.isValidAdmin ? 'text-green-600' : 'text-red-600'
                      }`}>
                        {adminStatus.isValidAdmin 
                          ? 'Toutes les permissions administrateur sont configur√©es'
                          : 'Les permissions administrateur ne sont pas configur√©es'
                        }
                      </p>
                    </div>
                  </div>
                </div>

                {/* D√©tails des v√©rifications */}
                {adminStatus.exists && (
                  <div className="space-y-2">
                    <p className="font-medium text-gray-900 mb-2">D√©tails des v√©rifications :</p>
                    
                    <div className="grid grid-cols-2 gap-2 text-sm">
                      <div className={`p-2 rounded border ${
                        adminStatus.checks?.roleAdmin ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200'
                      }`}>
                        <span className="font-medium">R√¥le:</span>
                        <span className={adminStatus.checks?.roleAdmin ? 'text-green-600 ml-1' : 'text-gray-500 ml-1'}>
                          {adminStatus.role || 'Non d√©fini'}
                        </span>
                      </div>
                      
                      <div className={`p-2 rounded border ${
                        adminStatus.checks?.flagAdmin ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200'
                      }`}>
                        <span className="font-medium">Flag Admin:</span>
                        <span className={adminStatus.checks?.flagAdmin ? 'text-green-600 ml-1' : 'text-gray-500 ml-1'}>
                          {adminStatus.isAdmin ? 'Oui' : 'Non'}
                        </span>
                      </div>
                      
                      <div className={`p-2 rounded border ${
                        adminStatus.checks?.profileRoleAdmin ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200'
                      }`}>
                        <span className="font-medium">Profil:</span>
                        <span className={adminStatus.checks?.profileRoleAdmin ? 'text-green-600 ml-1' : 'text-gray-500 ml-1'}>
                          {adminStatus.profileRole || 'Non d√©fini'}
                        </span>
                      </div>
                      
                      <div className={`p-2 rounded border ${
                        adminStatus.checks?.hasPermissions ? 'bg-green-50 border-green-200' : 'bg-gray-50 border-gray-200'
                      }`}>
                        <span className="font-medium">Permissions:</span>
                        <span className={adminStatus.checks?.hasPermissions ? 'text-green-600 ml-1' : 'text-gray-500 ml-1'}>
                          {adminStatus.permissions?.length || 0}
                        </span>
                      </div>
                    </div>
                  </div>
                )}
              </div>
            ) : (
              <p className="text-gray-500">Aucune donn√©e disponible</p>
            )}
          </div>

          {/* Actions */}
          <div className="bg-white rounded-lg border p-6">
            <h3 className="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
              <Settings className="w-5 h-5" />
              Actions
            </h3>
            
            <div className="space-y-4">
              
              {/* Bouton de v√©rification */}
              <button
                onClick={checkCurrentAdminStatus}
                disabled={loading}
                className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
              >
                <RefreshCw className={`w-4 h-4 ${loading ? 'animate-spin' : ''}`} />
                {loading ? 'V√©rification...' : 'V√©rifier le Statut'}
              </button>

              {/* Bouton de correction */}
              {adminStatus && !adminStatus.isValidAdmin && (
                <button
                  onClick={fixAdminAccess}
                  disabled={fixing}
                  className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-yellow-500 to-orange-500 text-white rounded-lg hover:from-yellow-600 hover:to-orange-600 disabled:opacity-50 disabled:cursor-not-allowed transition-all"
                >
                  <Zap className={`w-4 h-4 ${fixing ? 'animate-pulse' : ''}`} />
                  {fixing ? 'Correction en cours...' : 'üöÄ Corriger l\'Acc√®s Admin'}
                </button>
              )}

              {/* Acc√®s au panel admin */}
              {adminStatus?.isValidAdmin && (
                <Link
                  to="/admin-test"
                  className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all"
                >
                  <Crown className="w-4 h-4" />
                  üéâ Acc√©der au Panel Admin
                </Link>
              )}
            </div>

            {/* Historique des corrections */}
            {fixHistory.length > 0 && (
              <div className="mt-6 pt-4 border-t">
                <h4 className="font-medium text-gray-900 mb-2">Historique</h4>
                <div className="space-y-2">
                  {fixHistory.slice(0, 3).map((entry, index) => (
                    <div key={index} className={`text-xs p-2 rounded ${
                      entry.success ? 'bg-green-50 text-green-700' : 'bg-red-50 text-red-700'
                    }`}>
                      <span className="font-medium">
                        {entry.success ? '‚úÖ' : '‚ùå'} {entry.action}
                      </span>
                      <span className="text-gray-500 ml-2">
                        {entry.timestamp.toLocaleTimeString()}
                      </span>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>

        {/* Instructions */}
        <div className="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h3 className="font-semibold text-blue-900 mb-3">üìã Instructions</h3>
          <div className="text-sm text-blue-800 space-y-2">
            <p><strong>1. V√©rifier le statut :</strong> Cliquez sur "V√©rifier le Statut" pour voir vos permissions actuelles</p>
            <p><strong>2. Corriger si n√©cessaire :</strong> Si vous n'avez pas l'acc√®s admin, cliquez sur "Corriger l'Acc√®s Admin"</p>
            <p><strong>3. Tester l'acc√®s :</strong> Une fois corrig√©, utilisez "Acc√©der au Panel Admin" pour tester</p>
            <p><strong>4. Recharger :</strong> Rechargez la page apr√®s correction pour voir les changements</p>
          </div>
        </div>
      </div>
    </div>
  );
};

export default AdminQuickFixPage;
