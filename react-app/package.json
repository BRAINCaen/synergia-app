{
  "name": "synergia-app",
  "private": true,
  "version": "3.5.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "build:fast": "vite build --mode production --minify esbuild --no-sourcemaps",
    "build:netlify": "npm ci --only=production --no-audit --no-fund && vite build --mode production --minify esbuild",
    "build:debug": "vite build --mode production --sourcemap",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "firebase": "^10.7.1",
    "zustand": "^4.4.7",
    "lucide-react": "^0.263.1",
    "framer-motion": "^10.16.16",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "vite": "^4.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.9.2",
  "overrides": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^4.5.0"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "config": {
    "build_timeout": "15m"
  }
}
{
  "scripts": {
    "dev": "vite",
    "build": "echo 'Force build v3.5.3-2025' && vite build --mode production --force",
    "build-force": "rm -rf dist && rm -rf node_modules/.vite && npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0"
  }
}
