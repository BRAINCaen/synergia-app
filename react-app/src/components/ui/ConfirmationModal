    confirmText: 'Modifier le r√¥le',
    type: 'warning',
    onConfirm
  }),

  archiveProject: (projectTitle, onConfirm) => ({
    title: 'Archiver le projet',
    message: `Le projet "${projectTitle}" sera archiv√© et ne sera plus visible dans la liste active. Vous pourrez le restaurer plus tard.`,
