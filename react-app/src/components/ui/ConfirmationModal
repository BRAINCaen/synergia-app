// ==========================================
// üìÅ react-app/src/components/ui/ConfirmationModal.jsx
// MODAL DE CONFIRMATION - VERSION RESPONSIVE
// ==========================================

import React, { useState } from 'react';
import { AlertTriangle, Trash2, X, CheckCircle } from 'lucide-react';

const ConfirmationModal = ({
  isOpen,
  onClose,
  onConfirm,
  title,
  message,
  confirmText = 'Confirmer',
  cancelText = 'Annuler',
  type = 'danger',
  requiresConfirmation = false,
  confirmationText = '',
  loading = false
}) => {
  const [inputValue, setInputValue] = useState('');

  const typeConfig = {
    danger: {
      icon: Trash2,
      iconColor: 'text-red-400',
      bgColor: 'bg-red-600',
      hoverColor: 'hover:bg-red-700',
      borderColor: 'border-red-500'
    },
    warning: {
      icon: AlertTriangle,
      iconColor: 'text-yellow-400',
      bgColor: 'bg-yellow-600',
      hoverColor: 'hover:bg-yellow-700',
      borderColor: 'border-yellow-500'
    },
    info: {
      icon: CheckCircle,
      iconColor: 'text-blue-400',
      bgColor: 'bg-blue-600',
      hoverColor: 'hover:bg-blue-700',
      borderColor: 'border-blue-500'
    }
  };

  const config = typeConfig[type];
  const Icon = config.icon;

  const canConfirm = !requiresConfirmation || inputValue.toLowerCase() === confirmationText.toLowerCase();

  const handleConfirm = () => {
    if (canConfirm && !loading) {
      onConfirm();
    }
  };

  const handleClose = () => {
    if (!loading) {
      setInputValue('');
      onClose();
    }
  };

  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 z-50 overflow-y-auto">
      <div className="flex items-start justify-start sm:items-center sm:justify-center min-h-screen px-0 sm:px-4 pt-0 sm:pt-4 pb-0 sm:pb-20 text-center sm:block sm:p-0">
        <div 
          className="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
          onClick={handleClose}
        ></div>

        <div className="inline-block align-bottom bg-gray-800 rounded-none sm:rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all w-full max-w-[375px] sm:max-w-[95vw] md:max-w-lg h-[100vh] sm:h-auto sm:my-8 sm:align-middle sm:p-6">
          
          <div className="sm:flex sm:items-start">
            <div className={`mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full ${config.bgColor} bg-opacity-20 sm:mx-0 sm:h-10 sm:w-10`}>
              <Icon className={`h-6 w-6 ${config.iconColor}`} />
            </div>
            
            <div className="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left flex-1">
              <h3 className="text-lg leading-6 font-medium text-white mb-2">
                {title}
              </h3>
              <div className="mt-2">
                <p className="text-sm text-gray-300">
                  {message}
                </p>
              </div>

              {requiresConfirmation && (
                <div className="mt-4">
                  <label className="block text-sm font-medium text-gray-300 mb-2">
                    Pour confirmer, tapez <span className="font-bold text-white">{confirmationText}</span>
                  </label>
                  <input
                    type="text"
                    value={inputValue}
                    onChange={(e) => setInputValue(e.target.value)}
                    placeholder={confirmationText}
                    className="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    disabled={loading}
                  />
                </div>
              )}
            </div>

            <button
              type="button"
              onClick={handleClose}
              disabled={loading}
              className="absolute top-4 right-4 text-gray-400 hover:text-white transition-colors"
            >
              <X className="w-5 h-5" />
            </button>
          </div>

          <div className="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse gap-3">
            <button
              type="button"
              onClick={handleConfirm}
              disabled={!canConfirm || loading}
              className={`w-full inline-flex justify-center rounded-lg border border-transparent px-4 py-2 text-base font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 sm:ml-3 sm:w-auto sm:text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed ${config.bgColor} ${config.hoverColor} focus:ring-${type === 'danger' ? 'red' : type === 'warning' ? 'yellow' : 'blue'}-500`}
            >
              {loading ? (
                <div className="flex items-center">
                  <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                  Traitement...
                </div>
              ) : (
                confirmText
              )}
            </button>
            
            <button
              type="button"
              onClick={handleClose}
              disabled={loading}
              className="mt-3 w-full inline-flex justify-center rounded-lg border border-gray-600 px-4 py-2 bg-gray-700 text-base font-medium text-gray-300 shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:mt-0 sm:w-auto sm:text-sm transition-colors disabled:opacity-50"
            >
              {cancelText}
            </button>
          </div>
        </div>
      </div>
    </div>
  );
};

export const useConfirmationModal = () => {
  const [isOpen, setIsOpen] = useState(false);
  const [config, setConfig] = useState({});

  const openModal = (modalConfig) => {
    setConfig(modalConfig);
    setIsOpen(true);
  };

  const closeModal = () => {
    setIsOpen(false);
    setConfig({});
  };

  const confirmDelete = (itemName, onConfirm, options = {}) => {
    openModal({
      title: options.title || 'Confirmer la suppression',
      message: options.message || `√ätes-vous s√ªr de vouloir supprimer "${itemName}" ? Cette action est irr√©versible.`,
      confirmText: options.confirmText || 'Supprimer',
      type: 'danger',
      requiresConfirmation: options.requiresConfirmation,
      confirmationText: options.requiresConfirmation ? itemName : '',
      onConfirm
    });
  };

  const confirmAction = (actionTitle, actionMessage, onConfirm, options = {}) => {
    openModal({
      title: actionTitle,
      message: actionMessage,
      confirmText: options.confirmText || 'Confirmer',
      cancelText: options.cancelText || 'Annuler',
      type: options.type || 'warning',
      requiresConfirmation: options.requiresConfirmation || false,
      confirmationText: options.confirmationText || '',
      onConfirm
    });
  };

  return {
    isOpen,
    config,
    openModal,
    closeModal,
    confirmDelete,
    confirmAction,
    ConfirmationModal: () => (
      <ConfirmationModal
        isOpen={isOpen}
        onClose={closeModal}
        {...config}
      />
    )
  };
};

